<UserControl x:Class="ISSO.Tools.LexVizDesktop.FrameItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="BaseBar" TargetType="Label">
            <Setter Property="Background" Value="#FFF"></Setter>
            <Setter Property="Padding" Value="0"></Setter>
            <Setter Property="Foreground" Value="#369"></Setter>
            <Setter Property="Margin" Value="0"></Setter>
            <Setter Property="FontSize" Value="24"></Setter>
        </Style>

    </UserControl.Resources>
    <Grid>
        <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" Margin="0">
            <Label Name="lblFrameName" Style="{StaticResource BaseBar}" 
                   DockPanel.Dock="Top" ToolTipService.ShowDuration="30000" >
            </Label>


            
        </DockPanel>
    </Grid>
</UserControl>
